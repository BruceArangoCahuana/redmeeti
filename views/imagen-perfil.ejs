<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST" enctype="multipart/form-data">
        <legend>Sube tu foto de perfil</legend>
        <div class="campo">
            <label>Imagen:</label>
            <input type="file" name="imagen">
        </div>
        <% if(usuario.imagen){ %>
        <div class="campo">
            <label>Imagen actual:</label>
            <img src="/uploads/perfiles/<%= usuario.imagen %>" width="300" >
        </div>
        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-azul">
        </div>
        <% }else{ %>
        <div class="campo">
            <p>Inserta una imagen para tu perfil</p>
        </div>
        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-azul">
        </div>
        <% } %>
    </form>
</main>