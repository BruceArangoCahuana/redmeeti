<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <div class="campo">
            <label>Nombre:</label>
            <input type="text" name="nombre" placeholder="Nombre del grupo" value="<%- grupo.nombre %>">
        </div>
        <div class="campo descripcion">
            <label>Descripcion:</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%- grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categor√≠a</label>
            <select name="categoriaId">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categorias.forEach(categoria => {  %>
                    <option value="<%= categoria.id %>"
                    <%= (grupo.categoriaId === categoria.id) ? 'selected':'' %>
                    ><%= categoria.nombre %></option>
                <% })  %>
            </select>
        </div>
        <div class="campo">
            <label>Sitio web:</label>
           <input type="url" name="url" placeholder="Tu sitio webs" value="<%- grupo.url %>">
        </div>
  
        <div class="campo enviar">
            <input type="submit" value="Guardar cambio" class="btn btn-azul">
        </div>
    </form>
</main>