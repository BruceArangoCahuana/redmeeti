<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form class="default-form" action="/cambiar-password" method="POST">
        <div class="campo">
            <label>Password Anterior</label>
            <input type="password" name="anterior" placeholder="Password actual">
        </div>
       
        <div class="campo">
            <label>Nuevo password</label>
            <input type="password" name="nuevo" placeholder="Tu nuevo password">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Actualizar password">
        </div>
    </form>
</main>